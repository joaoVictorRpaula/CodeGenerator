@{
    var applicationName = Model.Application.ApplicationName;
    var dbName = Model.Application.DbInformation.Database;
    var serverName = Model.Application.DbInformation.Server;
    var user = Model.Application.DbInformation.User;
    var pass = Model.Application.DbInformation.Password;
}
{
  "Logging": {
    "LogLevel": {
      "Default": "Error",
      "Microsoft": "Warning"
    }
  },
  "ConnectionStrings": {
    @if (user == null || pass == null)
    {
<text>
    "@(applicationName)" : "Server=@(serverName);Database=@(dbName);Integrated Security=SSPI;TrustServerCertificate=True"</text>
    }
    @if (user != null && pass != null)
    {
<text>
    "@(applicationName)" : "Server=@(serverName);Database=@(dbName);User Id=@(user);Password=@(pass);TrustServerCertificate=True"</text>
    }
  },
  "AllowedHosts": "*"
}
