@{
    var applicationName = Model.Application.ApplicationName;
    var dbName = Model.Application.DbInformation.Database;
    var serverName = Model.Application.DbInformation.Server;
    var user = Model.Application.DbInformation.User;
    var pass = Model.Application.DbInformation.Password;
}
{
  "Logging": {
    "LogLevel": {
      "Default": "Error",
      "Microsoft": "Warning"
    }
  },
  "ConnectionStrings": {
    @if(user == null || pass == null)
    {
        $"\"{applicationName}\"" : $"\"Server={serverName};Database={dbName};Integrated Security=SSPI;TrustServerCertificate=True\""
    }
    @if(user != null && pass != null)
    {
        $"\"{applicationName}\"" : $"\"Server={serverName};Database={dbName};User Id={user};Password={pass};TrustServerCertificate=True\""
    }
  },
  "AllowedHosts": "*"
}
